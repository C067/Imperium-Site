
@{
    ViewData["Title"] = "ValidateEmail";
}

<div id="login">
    <h2 class="text-center pt-5">Email Validation</h2>
    <hr />

    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-8">
                <div id="login-box" class="col-md-12">
                    <div class="row">
                        <div class="col-md-12">
                            <br/>
                            <div class="alert alert-primary" role="alert">
                                @ViewBag.Message
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>