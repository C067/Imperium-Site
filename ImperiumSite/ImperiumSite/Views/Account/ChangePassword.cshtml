@model ImperiumSite.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
}

<div id="login">
    <h2 class="text-center pt-5">Change Password</h2>
    <hr />

    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-8">
                <div id="login-box" class="col-md-12">
                    <div class="row">
                        <div class="col-md-12">
                            <br />
                            @if (ViewBag.Code != 'E')
                            {
                                <form asp-action="ChangePassword">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input asp-for="Email" class="form-control" readonly />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <hr />

                                    <div class="form-group">
                                        <label asp-for="Password" class="control-label"></label>
                                        <input asp-for="Password" class="form-control" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ConfirmPassword" class="control-label"></label>
                                        <input asp-for="ConfirmPassword" class="form-control" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            @if (ViewBag.Code == 'P')
                                            {
                                                <div class="alert alert-primary text-center" role="alert">
                                                    @ViewBag.Message
                                                </div>
                                            }
                                            else if (ViewBag.Code == 'A')
                                            {
                                                <div class="alert alert-success text-center" role="alert">
                                                    @ViewBag.Message
                                                    <p>Please wait while this page redirects you.</p>
                                                    <span class="text-center" id="time"></span>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Change Password" class="btn btn-primary float-right" />
                                    </div>
                                    <br /><br />
                                </form>
                            }
                            else
                            {
                                <div class="alert alert-primary" role="alert">
                                    @ViewBag.Message
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <br /><br />

        @if (ViewBag.Code == 'A')
        {
            <script type="text/javascript">
                var time = 5;

                var x = setInterval(function () {
                    $("#time").text(time + " second(s)");
                    time--;

                    if (time < 0) {
                        window.location.href = '@Url.Action("Index", "Home")';
                    }
                }, 1000);
            </script>
        }
