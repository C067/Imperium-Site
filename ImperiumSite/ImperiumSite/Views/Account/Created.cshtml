@{
    ViewData["Title"] = "Account Created";
}

<div id="login">
    <h2 class="text-center pt-5">Account Created Sucessfully!</h2>
    <hr />

    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-8">
                <div id="login-box" class="col-md-12">
                    <div class="row">
                        <div class="col-md-12">
                            <br />
                            <div class="alert alert-success" role="alert">
                                Account Created Sucessfully! Please wait while this page redirects you to the login page. <br />
                                <span class="text-center" id="time"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var time = 5;

    var x = setInterval(function () {
        $("#time").text(time + " second(s)");
        time--;

        if (time < 0) {
            window.location.href = '@Url.Action("Index", "Home")';
        }
    }, 1000);
</script>